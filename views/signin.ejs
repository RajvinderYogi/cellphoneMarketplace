<% include shared/header.ejs %>

<h1 class="text-center">Sign in</h1>

<form method="post">
    <div class="row">
        <%if (messages.length > 0) {%>
        <div class="alert-danger col-md-10 text-center msg"><p><%= messages %></p></div>
        <%}
        else {%>
        <div class="alert-info col-md-10 text-center msg"><p>Please Enter Username and Password.</p></div>
        <%}%>
    </div>
    <fieldset class="form-group">
        <input type="email" class="form-control col-md-12" name="username" id="username" required placeholder="Username"/>
    </fieldset>
    <fieldset class="form-group">
        <input type="password" class="form-control col-md-12" name="password" id="password" required placeholder="Password"/>
    </fieldset>

    <button class="btn btn-primary offset-3 col-md-6 signBtn">Sign in</button>
    <!--//social authentication-->
    <section class="row">
        <a href="/google" class="btn btn-info offset-1 col-md-3">Google</a>
        <a href="/linkedin" class="btn btn-info offset-1 col-md-3">Linkedin</a>
        <a href="/instagram" class="btn btn-info offset-1 col-md-3">Instagram</a>
        <!--//having some issues with instagram login...sometime works-->
    </section>

    <hr>
    <p class="col-lg-12">Not Registered yet? Click here <a href="/register" title="Register">Register</a></p>
</form>


<% include shared/footer.ejs %>