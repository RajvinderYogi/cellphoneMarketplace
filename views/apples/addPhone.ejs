<% include ../shared/header.ejs%>
<h1 class="text-center">Add phone to the list</h1>
<form action="../apples/addPhone" enctype="multipart/form-data" method="post" class="col-md-6">
    <fieldset class="form-group">
        <input name="model" class="form-control col-md-12" placeholder="Model" required>
    </fieldset>
    <fieldset class="form-group">
        <input name="color" class="form-control col-md-12" placeholder="Color">
    </fieldset>
    <fieldset class="form-group">
        <select class="custom-select col-md-12" name="usage" required>
            <option disabled selected>Usage</option>
            <option value="new">New</option>
            <option value="Used">Used</option>
        </select>
    </fieldset>
    <fieldset class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" min="0" max="2500" name="price" class="form-control col-md-12" placeholder="Price" required/>
        </div>
    </fieldset>
    <!--<fieldset class="form-group">-->
        <!--<input type="file" name="color" class="form-control col-md-12" placeholder="Color">-->
    <!--</fieldset>-->
    <button class="offset-2 btn btn-primary col-md-2">Save</button>
    <button type="reset" class="offset-1 btn btn-danger col-md-2">Reset</button>
</form>

<% include ../shared/footer.ejs%>